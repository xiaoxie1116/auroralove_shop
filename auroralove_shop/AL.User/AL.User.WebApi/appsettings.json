{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "AppSettings": {
    "Redis": {
      "Enabled": true, //true
      "ConnectionString": "172.17.17.9:6379", 
      //连接密码 
